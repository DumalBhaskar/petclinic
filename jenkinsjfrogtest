pipeline{
    agent {label 'mvn_node' }
    parameters{
        choice(name:'JFROG', choices: ['master', 'jfrog'], description: 'select the branch to run')
    }
    stages{
        stage('git clone'){
            steps{
                git branch: "${params.JFROG}", url: 'https://github.com/vamsibakka/spring-framework-petclinic.git'
            }
        }
        stage('build'){
            steps{
                rtMavenRun(
                    tool: 'MAVEN_DEFAULT',
                    pom: 'pom.xml',
                    goals: 'package',
                    deployerId: 'MAVEN_DEPLOYER'
                )
            }
        }
        stage('jfrog artifactory') {
            steps{
                rtMavenDeployer(
                    id: 'MAVEN_DEPLOYER',
                    serverId: 'jfrog_ubutnu',
                    releaseRepo: 'testmaven-libs-release-local',
                    snapshotRepo: 'testmaven-libs-snapshot-local'

                )
            }
        }
        stage('archive'){
            steps{
                junit '**/surefire-reports/*.xml',
                    archiveArtifacts artifacts '**/target/*.jar'
            }
        }

    }
}